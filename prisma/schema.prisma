generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  quotes        Quote[]
  sessions      Session[]
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model PhoneVerification {
  phone     String   @id
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
}

model Dealer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quotes    Quote[]
}

model CarBrand {
  id            Int        @id @default(autoincrement())
  brand_name    String
  brand_country String
  models        CarModel[]
}

model CarExteriorColor {
  id                     Int       @id @default(autoincrement())
  trim_id                Int
  trim                   CarTrim   @relation(fields: [trim_id], references: [id], onDelete: Cascade)
  exterior_color_name    String
  exterior_color_hexcode String
  exterior_color_price   Int
}

model CarInteriorColor {
  id                     Int       @id @default(autoincrement())
  trim_id                Int
  trim                   CarTrim   @relation(fields: [trim_id], references: [id], onDelete: Cascade)
  interior_color_name    String
  interior_color_hexcode String
  interior_color_price   Int
}

model CarOption {
  id            Int       @id @default(autoincrement())
  trim_id       Int
  trim          CarTrim   @relation(fields: [trim_id], references: [id], onDelete: Cascade)
  package_name  String
  option_detail String
  option_price  Int
}

model CarTrim {
  id                Int                 @id @default(autoincrement())
  car_model_id      Int
  carModel          CarModel            @relation(fields: [car_model_id], references: [id], onDelete: Cascade)
  trim_name         String
  trim_price        Int
  exteriorColors    CarExteriorColor[]
  interiorColors    CarInteriorColor[]
  options           CarOption[]

  @@index([car_model_id])
}

model CarModel {
  id              Int      @id @default(autoincrement())
  brand_id        Int
  car_name        String
  body_type       String
  price           Int
  liter_size      Int
  fuel_efficiency Float
  brand           CarBrand @relation(fields: [brand_id], references: [id])
  quotes          Quote[]
  trims           CarTrim[]

  @@index([brand_id])
}

model Quote {
  id         String    @id @default(cuid())
  userId     String
  dealerId   String
  carModelId Int?
  status     String    @default("PENDING")
  price      Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  chatRoom   ChatRoom?
  carModel   CarModel? @relation(fields: [carModelId], references: [id])
  dealer     Dealer    @relation(fields: [dealerId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dealerId])
  @@index([carModelId])
}

model ChatRoom {
  id        String    @id @default(cuid())
  quoteId   String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  quote     Quote     @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  messages  Message[]
}

model Message {
  id         String     @id @default(cuid())
  chatRoomId String
  senderId   String
  senderType SenderType
  content    String
  isRead     Boolean    @default(false)
  createdAt  DateTime   @default(now())
  chatRoom   ChatRoom   @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)

  @@index([chatRoomId])
}

enum SenderType {
  USER
  DEALER
  SYSTEM
}